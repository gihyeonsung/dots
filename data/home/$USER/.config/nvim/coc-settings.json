{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "cabal.project",
        "package.yaml",
        "stack.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell",
        "hs",
        "lhs"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    }
  }
}
